<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="140dp">

    <TextView
        android:id="@+id/data_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="DATA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/marca_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Marcações:"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/data_txt"
        app:layout_constraintTop_toBottomOf="@+id/data_txt" />

    <TextView
        android:id="@+id/entrada_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="entrada: "
        app:layout_constraintStart_toStartOf="@+id/marca_txt"
        app:layout_constraintTop_toBottomOf="@+id/marca_txt" />

    <TextView
        android:id="@+id/saida_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:text="saida: "
        app:layout_constraintBottom_toBottomOf="@+id/entrada_txt"
        app:layout_constraintStart_toEndOf="@+id/entrada_txt"
        app:layout_constraintTop_toTopOf="@+id/entrada_txt"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="15dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/time" />

    <View
        android:id="@+id/linha_divi_view"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_marginStart="84dp"
        android:background="@color/colorPrimary"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entrada_txt"
        app:layout_constraintVertical_bias="0.939" />

    <TextView
        android:id="@+id/txtEntValorRetornado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="txtVEnt"
        app:layout_constraintBottom_toBottomOf="@+id/entrada_txt"
        app:layout_constraintStart_toEndOf="@+id/entrada_txt"
        app:layout_constraintTop_toTopOf="@+id/entrada_txt"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtSaidaValorRetornado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="txtVSaida"
        app:layout_constraintBottom_toBottomOf="@+id/saida_txt"
        app:layout_constraintStart_toEndOf="@+id/saida_txt"
        app:layout_constraintTop_toTopOf="@+id/saida_txt"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>